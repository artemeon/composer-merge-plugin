{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://github.com/artemeon/composer-merge-plugin/packageconfig.schema.json#",

    "type": "object",
    "properties": {
        "core": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "pattern": "^\\w+$"
            }
        }
    },
    "required": ["core"]
}
